{
  "name": "thalia",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Yet another server framework for serving websites",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/server/types.js",
      "types": "./dist/server/types.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./website": {
      "import": "./dist/server/website.js",
      "types": "./dist/server/website.d.ts"
    },
    "./models": {
      "import": "./dist/models/index.js",
      "types": "./dist/models/index.d.ts"
    },
    "./security": {
      "import": "./dist/server/security.js",
      "types": "./dist/server/security.d.ts"
    }
  },
  "bin": {
    "thalia": "./dist/server/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "src/views/**/*.hbs"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "pm2-start": "pm2 startOrReload ecosystem.config.json",
    "build": "tsc",
    "dev": "node bin/develop.js",
    "init": "node dist/bin/create-project.js"
  },
  "dependencies": {
    "@sequelize/core": "7.0.0-alpha.46",
    "@sequelize/mariadb": "7.0.0-alpha.46",
    "formidable": "^3.5.1",
    "handlebars": "^4.7.8",
    "sass": "1.77.6",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/formidable": "^3.4.5",
    "@types/node": "^20.12.5",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "10.2.6",
    "browser-sync": "^3.0.4",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.11.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "handlebars-loader": "^1.7.3",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "sass-loader": "^14.2.1",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.5",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^5.10.0"
  },
  "engines": {
    "node": ">=22"
  },
  "nodemonConfig": {
    "exec": "node dist/server/index.js",
    "verbose": true,
    "watch": [
      "./dist/server/**/*.js",
      "./websites/**/config.js",
      "./websites/**/config/*.js",
      "./websites/**/db_bootstrap.js",
      "./websites/**/models/**/*.js",
      "./websites/**/src/**/*.hbs"
    ],
    "ignore": [
      "node_modules/*",
      "public/*",
      "*.ts",
      "tsconfig.json"
    ],
    "delay": "500"
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": 0,
      "@typescript-eslint/no-unused-vars": 1,
      "no-useless-constructor": 0,
      "@typescript-eslint/no-useless-constructor": 1
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "es6": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/david-ma/Thalia.git"
  },
  "author": "David Ma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/david-ma/Thalia/issues"
  },
  "homepage": "https://github.com/david-ma/Thalia#readme"
}
