{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "thalia": ["./server/index"],
      "thalia/*": ["./server/*"],
      "thalia/models/*": ["./models/*"]
    }
  },
  "include": [
    "server/**/*",
    "models/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "websites/**/*"
  ]
} 